@using Scalesoft.Localization.AspNetCore
@using Ridics.Authentication.Service.Models
@model List<Ridics.Authentication.Service.Models.ViewModel.SelectableViewModel<Ridics.Authentication.Service.Models.ViewModel.Roles.RoleViewModel>>
@inject ILocalizationService Localizer

@{
    ViewData["Title"] = Localizer.Translate("user-roles-title");
}

<h2>@Localizer.Translate("user-roles-heading")</h2>
<partial name="_ValidationSummary"/>

<hr/>

@if (Model != null)
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Roles">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>@Localizer.Translate("all-roles")</label><br/>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <input asp-for="@Model[i].Item.Name" value="@Model[i].Item.Name" type="hidden"/>
                        <input asp-for="@Model[i].Item.Id" value="@Model[i].Item.Id" type="hidden"/>
                        <input asp-for="@Model[i].IsSelected" type="checkbox"/>
                        <label asp-for="@Model[i].IsSelected">@Model[i].Item.Name</label>
                        <br/>
                    }
                </div>
                <div class="form-group">
                    <input type="submit" value="@Localizer.Translate("confirm")" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="no-items">@Localizer.Translate("no-roles")</div>
}

<a asp-action="Create" asp-controller="Role">@Localizer.Translate("create-new-role")</a>

<partial name="_BackButton" />
