@using Scalesoft.Localization.AspNetCore
@model Ridics.Authentication.Service.Models.ViewModel.Keys.EditableApiAccessKeyHashViewModel
@inject ILocalizationService Localizer

@{
    ViewData["Title"] = Localizer.Translate("update-api-access-key-title");
}

<h2>@Localizer.Translate("update-api-access-key-heading")</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditKeyHash">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled="disabled" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Algorithm" class="control-label"></label>
                <select asp-for="Algorithm" asp-items="Model.SelectableAlgorithms" class="form-control"></select>
                <span asp-validation-for="Algorithm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer.Translate("save")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<partial name="_BackButton" />