@using Ridics.Authentication.Service.Models.ViewModel.Permission
@using Scalesoft.Localization.AspNetCore
@model Ridics.Authentication.Service.Models.ViewModel.Permission.EditResourcePermissionViewModel
@inject ILocalizationService Localizer

@{
    ViewData["Title"] = Localizer.Translate("create-resource-permission-title");
}

<h2>@Localizer.Translate("create-resource-permission-heading")</h2>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ResourceId" class="control-label"></label>
                <input asp-for="ResourceId" class="form-control"/>
                <span asp-validation-for="ResourceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedResourcePermissionTypeActionId" class="control-label"></label>
                <select asp-for="SelectedResourcePermissionTypeActionId" asp-items="@(new SelectList(Model.ResourcePermissionTypeActionList, nameof(ResourcePermissionTypeActionViewModel.Id), nameof(ResourcePermissionTypeActionViewModel.ResourcePermissionString)))"></select>
                <span asp-validation-for="SelectedResourcePermissionTypeActionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer.Translate("create")" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<partial name="_BackButton" />
