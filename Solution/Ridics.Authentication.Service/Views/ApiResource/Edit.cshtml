@using Scalesoft.Localization.AspNetCore
@model Ridics.Authentication.Service.Models.ViewModel.Resources.ApiResources.EditableApiResourceViewModel
@inject ILocalizationService Localizer

@{
    ViewData["Title"] = Localizer.Translate("edit-api-resource-title");
}

<h2>@Localizer.Translate("edit-api-resource-heading")</h2>
<div class="lead">@Model.ApiResourceViewModel.Name</div>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApiResourceViewModel.Name" class="control-label"></label>
                <input asp-for="ApiResourceViewModel.Name" class="form-control"/>
                <span asp-validation-for="ApiResourceViewModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApiResourceViewModel.Description" class="control-label"></label>
                <textarea asp-for="ApiResourceViewModel.Description" class="form-control"></textarea>
                <span asp-validation-for="ApiResourceViewModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer.Translate("select-claims")</label><br/>
                @for (int i = 0; i < Model.SelectableClaimTypes.Count(); i++)
                {
                    <input asp-for="SelectableClaimTypes[i].Item.Name" value="@Model.SelectableClaimTypes[i].Item.Name" type="hidden"/>
                    <input asp-for="SelectableClaimTypes[i].Item.Id" value="@Model.SelectableClaimTypes[i].Item.Id" type="hidden"/>
                    <input asp-for="SelectableClaimTypes[i].IsSelected" type="checkbox"/>
                    <label asp-for="SelectableClaimTypes[i].IsSelected">@Model.SelectableClaimTypes[i].Item.Name</label>
                    <br/>
                }
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ApiResourceViewModel.Required"/> @Html.DisplayNameFor(model => model.ApiResourceViewModel.Required)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ApiResourceViewModel.ShowInDiscoveryDocument"/> @Html.DisplayNameFor(model => model.ApiResourceViewModel.ShowInDiscoveryDocument)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer.Translate("save")" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<partial name="_BackButton" />
