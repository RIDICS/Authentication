@using Scalesoft.Localization.AspNetCore;
@inject ILocalizationService Localizer

@{
    ViewData["Title"] = Localizer.Translate("password-reset-request-success-title", "ResetPasswordViewModel");
    Layout = "_EmptyLayout";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/ridics.login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/node_modules/@("@")fortawesome/fontawesome-free/css/all.css" asp-append-version="true">
}
<div class="card shadow">
    <div class="card-header">
        <h2>@Localizer.Translate("reset-email-sent-heading", "ResetPasswordViewModel")</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col">
                @Localizer.Translate("reset-email-sent", "ResetPasswordViewModel")
            </div>
        </div>
        <div class="row">
            <div class="col">
                <a asp-action="Login" asp-controller="Account" asp-route-returnUrl="@Model" class="btn btn-primary float-right">@Localizer.Translate("login")</a>
            </div>
        </div>

    </div>

</div>
