@using Scalesoft.Localization.AspNetCore
@model Ridics.Core.Structures.Shared.ErrorViewModel
@inject ILocalizationService Localizer
@{
    ViewData["Title"] = Localizer.Translate("error", "error");
    Layout = "_EmptyLayout";
}

@section Styles{
    <link rel="stylesheet" asp-append-version="true" href="~/css/ridics.bootstrap-themed.css">
    <link rel="stylesheet" href="~/css/ridics.error.css" asp-append-version="true"/>
}

<div style="height: 50px;"></div>

<div class="card shadow">
    <div class="card-header alert alert-danger" role="alert">
        <h2 class="alert-heading">@Model.ErrorMessage</h2>
        <hr/>
        <div class="row ml-1">
            @Model.ErrorMessageDetail
        </div>
    </div>
   
        <div class="card-body">
            <div class="row ml-1 align-items-center h-100">
                @if (Model.ShowRequestId)
                {
                    <div class="col-1">
                        <h6>
                            <strong>@Localizer.Translate("details", "error")</strong>
                        </h6>
                    </div>
                    <div class="col-8">
                        <small>
                            <strong>@Localizer.Translate("status-code", "error"):</strong> <code>@Model.ErrorCode</code>
                            <br />
                            <strong>@Localizer.Translate("request-id", "error"):</strong> <code>@Model.RequestId</code>
                        </small>
                    </div>
                    <div class="col-3 pull-right">
                        <div class="float-right ">
                            <a href="@Model.ReturnUrl">@Localizer.Translate("back-to-main-page", "error")</a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-12 pull-right">
                        <div class="float-right">
                            <a href="@Model.ReturnUrl">@Localizer.Translate("back-to-main-page", "error")</a>
                        </div>
                    </div>
                }
            </div>
        </div>
</div>
